@model AlphaMarketPDV.Models.UnidadeMedida;

@{
    ViewData["Title"] = "Excluir Unidade de Medida";
}

<div class="card-header text-white bg-dark text-center h2">
    @ViewData["Title"]
</div>
<br />

<h3>Tem certeza que deseja excluir esta unidade de medida?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Sigla)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sigla)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-undo"></i> Voltar
        </a>
    </form>

</div>