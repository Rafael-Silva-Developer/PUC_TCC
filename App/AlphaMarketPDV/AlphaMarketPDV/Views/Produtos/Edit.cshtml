@model AlphaMarketPDV.Models.ViewModels.ProdutoFormViewModel

@{
    ViewData["Title"] = "Editar produto";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Produto.Id" />
            <div class="form-group">
                <label asp-for="Produto.Codigo" class="control-label"></label>
                <input asp-for="Produto.Codigo" class="form-control" />
                <span asp-validation-for="Produto.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.DescricaoLonga" class="control-label"></label>
                <input asp-for="Produto.DescricaoLonga" class="form-control" />
                <span asp-validation-for="Produto.DescricaoLonga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.DescricaoCurta" class="control-label"></label>
                <input asp-for="Produto.DescricaoCurta" class="form-control" />
                <span asp-validation-for="Produto.DescricaoCurta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.QuantMinima" class="control-label"></label>
                <input asp-for="Produto.QuantMinima" class="form-control" />
                <span asp-validation-for="Produto.QuantMinima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.ValorVenda" class="control-label"></label>
                <input asp-for="Produto.ValorVenda" class="form-control" />
                <span asp-validation-for="Produto.ValorVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Foto" class="control-label"></label>
                <input asp-for="Produto.Foto" class="form-control" />
                <span asp-validation-for="Produto.Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.DataHoraCadastro" class="control-label"></label>
                <input asp-for="Produto.DataHoraCadastro" class="form-control" />
                <span asp-validation-for="Produto.DataHoraCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label"></label>
                <select asp-for="Produto.CategoriaId" asp-items="@(new SelectList(Model.Categorias,"Id","Descricao"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produto.UnidadeMedidaId" class="control-label"></label>
                <select asp-for="Produto.UnidadeMedidaId" asp-items="@(new SelectList(Model.UnidadesMedida,"Id","Descricao"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Produto.Ativo" /> @Html.DisplayNameFor(model => model.Produto.Ativo)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}