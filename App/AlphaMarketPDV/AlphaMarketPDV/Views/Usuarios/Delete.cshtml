@model AlphaMarketPDV.Models.Usuario;

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="card-header text-white bg-dark text-center h2">
    @ViewData["Title"]
</div>
<hr />

<h3>Tem certeza que deseja excluir este usuário ?</h3>

<div>
    <div class="row">
        <dl class="dl-horizontal col-8">
            <dt>
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Login)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tipo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Loja)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Loja.Descricao)
            </dd>
        </dl>
        <div class="col-4">
            @if (@Model.FotoUsuario != null || @Model.FotoUsuario == "")
            {
                <figure>
                    <img src="~/images/usuarios/@Model.FotoUsuario" height="300" width="300" asp-append-version="true" alt="Imagem do usuario" class="border" />
                </figure>
            }
        </div>
    </div>
</div>

<div>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-undo"></i> Voltar
        </a>
    </form>
</div>